<% Current.meta_tags.set(title: t("devise.passwords.new.title", default: "שכחת סיסמה?")) if defined?(Current) && Current.respond_to?(:meta_tags) %>

<div class="bg-white shadow-lg rounded-2xl p-8 space-y-6">
  <div class="text-center space-y-2">
    <h1 class="text-2xl font-bold text-gray-900"><%= t("devise.passwords.new.heading", default: "שכחת סיסמה?") %></h1>
    <p class="text-sm text-gray-600"><%= t("devise.passwords.new.subheading", default: "הזן/י את האימייל שלך ונשלח אליך הוראות לאיפוס הסיסמה") %></p>
  </div>

  <%= form_with scope: resource_name, url: password_path(resource_name), local: true, class: "space-y-4" do |f| %>
    <%= render "error_messages", resource: resource %>

    <div class="space-y-1 text-right">
      <%= f.label :email, t("devise.passwords.new.email_label", default: t("devise.sessions.new.email_label", default: "Email")), class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", dir: "ltr", placeholder: t("devise.passwords.new.email_placeholder", default: t("devise.sessions.new.email_placeholder", default: "name@example.com")), class: "block w-full rounded-md border border-gray-300 bg-white text-left px-3 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div>
      <%= f.submit t("devise.passwords.new.submit", default: "שלחו לי הוראות לאיפוס סיסמה"), class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-semibold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <div class="text-center text-sm text-gray-600">
    <%= t(
      "devise.passwords.new.sign_in_prompt_html",
      default: "נזכרת בסיסמה? %{link}".html_safe,
      link: link_to(t("devise.passwords.new.sign_in_link", default: "להתחברות"), new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-500 font-semibold")
    ) %>
  </div>
</div>
