<div class="overflow-x-auto">
  <% if messages.any? %>
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.sent_at') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.recipient') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.method') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.not_sent.reason') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.not_sent.error_details') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.message_preview') %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% messages.each do |message| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
              <%= message.created_at.strftime("%b %d, %Y %H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
              <div>
                <% if message.phone.present? %>
                  <div class="font-medium"><%= message.phone %></div>
                <% end %>
                <% if message.email.present? %>
                  <div class="text-gray-500"><%= message.email %></div>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
              <% if message.delivery_method.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                  <%= message.delivery_method&.upcase %>
                </span>
              <% else %>
                <span class="text-gray-500">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
              <% reason_color = case message.reason
                                when 'not_approved' then 'bg-yellow-100 text-yellow-800'
                                when 'delivery_failed' then 'bg-red-100 text-red-800'
                                when 'no_contact_info' then 'bg-orange-100 text-orange-800'
                                when 'opt_out' then 'bg-purple-100 text-purple-800'
                                else 'bg-gray-100 text-gray-800'
                                end %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= reason_color %>">
                <%= message.reason_text %>
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 text-right">
              <div class="max-w-xs">
                <% if message.error_message.present? %>
                  <span class="text-red-600 text-xs"><%= truncate(message.error_message, length: 80) %></span>
                <% else %>
                  <span class="text-gray-500">-</span>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 text-right">
              <div class="max-w-xs">
                <% if message.full_message.present? %>
                  <%= truncate(message.full_message, length: 100) %>
                <% else %>
                  <span class="text-gray-500">-</span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-8 text-gray-500">
      <%= t('message_management.not_sent.no_messages') %>
    </div>
  <% end %>
</div>

