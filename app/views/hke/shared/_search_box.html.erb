<div>
  <%= form_with url: url, method: :get, data: { turbo_stream: true }, class: "flex items-center gap-2" do |form| %>

    <span class="text-base"><%= t('search_by_first_or_last_name') %>:</span>

    <%= form.search_field :name_search,
          value: params[:name_search],
          class: "border-1 border-neutral-300 border-solid rounded-md px-2",
          oninput: "this.form.requestSubmit();",
          onsearch: "this.form.requestSubmit();" %>

  <% end %>
</div>
