<div class="sm:mx-auto sm:w-full sm:max-w-md">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= t("welcome.index.title") %></h1>
    <h2 class="text-xl text-gray-600 mb-8"><%= t("welcome.index.subtitle") %></h2>
  </div>

  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <div class="text-center mb-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4"><%= t("welcome.index.welcome_title") %></h3>
      <p class="text-sm text-gray-600 mb-6" style="direction: rtl;">
        <%= t("welcome.index.description") %>
        <br>
        <%= t("welcome.index.description_details") %>
      </p>
    </div>

    <div class="space-y-4">
      <%= link_to new_user_session_path, class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" do %>
        <i class="fas fa-sign-in-alt ml-2"></i>
        <%= t("welcome.index.login_button") %>
      <% end %>

      <div class="text-center">
        <span class="text-sm text-gray-500"><%= t("welcome.index.no_account") %></span>
        <%= link_to t("welcome.index.register_link"), new_user_registration_path, class: "text-sm text-indigo-600 hover:text-indigo-500 font-medium" %>
      </div>
    </div>

    <div class="mt-8 pt-6 border-t border-gray-200">
      <div class="text-center">
        <h4 class="text-sm font-medium text-gray-900 mb-3"><%= t("welcome.index.features_title") %></h4>
        <ul class="text-xs text-gray-600 space-y-1" style="direction: rtl;">
          <li>• <%= t("welcome.index.features.deceased_management") %></li>
          <li>• <%= t("welcome.index.features.automatic_messages") %></li>
          <li>• <%= t("welcome.index.features.multi_community") %></li>
          <li>• <%= t("welcome.index.features.csv_import") %></li>
          <li>• <%= t("welcome.index.features.message_tracking") %></li>
        </ul>
      </div>
    </div>

    <div class="mt-6 text-center">
      <p class="text-xs text-gray-500">
        <%= t("welcome.index.help_text") %>
      </p>
    </div>
  </div>
</div>

<div class="mt-8 text-center">
  <p class="text-sm text-gray-500">
    <%= t("welcome.index.copyright", year: Date.current.year) %>
  </p>
</div>
