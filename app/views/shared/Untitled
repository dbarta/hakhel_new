<% flash.each do |type, message| %>
  <% next if message.blank? %>

  <div class="mb-4 rounded-md p-4 border text-sm
              <%= type.to_s == "notice" ? "bg-green-50 border-green-200 text-green-800" : "" %>
              <%= type.to_s == "alert"  ? "bg-red-50 border-red-200 text-red-800" : "" %>
              <%= (type.to_s != "notice" && type.to_s != "alert") ? "bg-gray-50 border-gray-200 text-gray-800" : "" %>">
    <%= message %>
  </div>
<% end %>
