<% if resource.errors.any? %>
  <div class="mb-6 rounded-md bg-red-500 dark:bg-red-700 p-4" role="alert">
    <div class="flex items-start gap-3">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="currentColor"
        class="w-6 h-6 text-white shrink-0 mt-0.5"
      >
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
          clip-rule="evenodd"
        />
      </svg>
      <div>
        <h4 class="font-bold text-lg text-white">
          <%= I18n.t(
            "errors.messages.not_saved",
            count: resource.errors.count,
            resource: resource.class.model_name.human.downcase,
          ) %>
        </h4>
        <ul class="text-base text-white mt-1 list-disc list-inside">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
